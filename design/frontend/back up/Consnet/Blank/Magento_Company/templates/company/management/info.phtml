            <div class="primary">
                <a href="<?= $block->escapeUrl($block->getCreateCompanyAccountUrl()) ?>"
                   class="action create primary">
                    <span><?= /* @noEscape */ __('Create a Company Account') ?></span>
                </a>
            </div>
        </div>
    <?php endif; ?>
<?php endif; ?>
